<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:id="@+id/numberOfMutation"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/d" android:layout_marginLeft="20dp"/>

    <EditText
            android:id="@+id/b"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="b"
            android:inputType="number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/textView13" />

    <EditText
            android:id="@+id/a"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="a"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
            android:id="@+id/textView16"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="*x4="
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/d"
            app:layout_constraintStart_toEndOf="@+id/d" />

    <TextView
            android:id="@+id/textView15"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="*x3+"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/c"
            app:layout_constraintStart_toEndOf="@+id/c" />

    <EditText
            android:id="@+id/d"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="d"
            android:inputType="number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView15"
            app:layout_constraintStart_toEndOf="@+id/textView15" />

    <EditText
            android:id="@+id/c"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="c"
            android:inputType="number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
            app:layout_constraintStart_toEndOf="@+id/textView14" />

    <TextView
            android:id="@+id/textView13"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="*x1+"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/a"
            app:layout_constraintStart_toEndOf="@+id/a" />

    <TextView
            android:id="@+id/textView14"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="*x2+"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/b"
            app:layout_constraintStart_toEndOf="@+id/b" />

    <EditText
            android:id="@+id/y"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="y"
            android:inputType="number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
            app:layout_constraintStart_toEndOf="@+id/textView16" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:gravity="center"
            android:text = " Genetic Algorithm Study "
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="48dp"
            android:background="#3D493C"
            android:onClick="onButtonClick"
            android:text = " Find Roots "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginLeft="120dp"/>

    <TextView
            android:id="@+id/result"
            android:layout_width="294dp"
            android:layout_height="142dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            android:layout_marginLeft="28dp"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="48dp"
            android:text = ""
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a"
            android:layout_marginLeft="33dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>